<UserControl x:Class="LabbWPF.SubmitedUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LabbWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        
        <StackPanel>
            <TextBlock Text="Submited Info: "/>
            <TextBlock Margin="3" >Name: <TextBlock Text="{Binding ValidatedUser.Name}"/></TextBlock>
            <TextBlock Margin="3" >Email: <TextBlock Text="{Binding ValidatedUser.Email}"/></TextBlock>
            <TextBlock Margin="3" >Street: <TextBlock Text="{Binding ValidatedUser.Address.Street}"/></TextBlock>
            <TextBlock Margin="3" >City: <TextBlock Text="{Binding ValidatedUser.Address.City}"/></TextBlock>
            <TextBlock Margin="3" >Zip Code: <TextBlock Text="{Binding ValidatedUser.Address.ZipCode}"/></TextBlock>
            <TextBlock Margin="3" >Company Name: <TextBlock Text="{Binding ValidatedUser.Company.Name}"/></TextBlock>
            <TextBlock Margin="3" >Company Catch Phrase: <TextBlock Text="{Binding ValidatedUser.Company.CatchPhrase}"/></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
